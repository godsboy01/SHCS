/* pages/notifications/notifications.wxss */
.container {
    padding-top: 140rpx;
    min-height: 100vh;
    background: #f7f8fa;
  }
  
  .tabs {
    flex-shrink: 0; /* 防止Tab栏收缩 */
    position: fixed;
    top: 140rpx;
    left: 0;
    right: 0;
    display: flex;
    background: #ffffff;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #eee;
    z-index: 100;
    box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 30rpx 0;
    font-size: 28rpx;
    color: #666;
    position: relative;
    transition: all 0.3s;
  }
  
  .tab.active {
    color: #4CAF50;
    font-weight: bold;
  }
  
  .tab-line {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 40rpx;
    height: 4rpx;
    background: #4CAF50;
    border-radius: 2rpx;
    transition: all 0.3s;
  }
  
  .message-list {
    padding: 120rpx 30rpx 30rpx;
    height: calc(100vh - 100rpx);
    box-sizing: border-box;
    transition: opacity 0.3s;
    opacity: 1;
  }
  
  .message-list.hidden {
    display: none;
    opacity: 0;
  }
  
  .message-item {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
    display: flex;
    align-items: flex-start;
    transition: all 0.3s;
  }
  
  .message-item:active {
    transform: scale(0.98);
    opacity: 0.8;
  }
  
  .message-icon {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    background: rgba(76,175,80,0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .message-icon image {
    width: 48rpx;
    height: 48rpx;
  }
  
  .message-content {
    flex: 1;
  }
  
  .message-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .title-text {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .status {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
  }
  
  .processed {
    color: #4CAF50;
    background: rgba(76,175,80,0.1);
  }
  
  .unprocessed {
    color: #FF9800;
    background: rgba(255,152,0,0.1);
  }
  
  .duration {
    font-size: 24rpx;
    color: #4CAF50;
    background: rgba(76,175,80,0.1);
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
  }
  
  .message-text {
    font-size: 28rpx;
    color: #666;
    line-height: 1.5;
    margin-bottom: 16rpx;
  }
  
  .message-info {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .elderly-name {
    font-size: 24rpx;
    color: #999;
  }
  
  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40rpx 0;
  }
  
  .page-btn {
    padding: 12rpx 30rpx;
    font-size: 26rpx;
    color: #4CAF50;
    background: #ffffff;
    border: 1rpx solid #4CAF50;
    border-radius: 30rpx;
    margin: 0 20rpx;
    transition: all 0.3s;
  }
  
  .page-btn:active {
    opacity: 0.8;
  }
  
  .page-btn.disabled {
    color: #999;
    border-color: #ddd;
    background: #f5f5f5;
    pointer-events: none;
  }
  
  .page-info {
    font-size: 26rpx;
    color: #666;
    display: flex;
    align-items: center;
  }
  
  .page-info .total {
    color: #999;
    margin-left: 4rpx;
  }
  
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 100rpx 0;
  }
  
  .empty-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
  }
  
  .empty-text {
    font-size: 28rpx;
    color: #999;
  }
  
  .loading-state {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 999;
  }
  
  .loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #4CAF50;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-state text {
    font-size: 26rpx;
    color: #666;
  }