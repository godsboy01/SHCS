
.page {
  padding-top: 100px;
  background-color: #f5f5f5;
}
/* pages/familyMembers/index.wxss */

.container {
  padding: 20px;
}

.family-header {
  text-align: center;
  margin-bottom: 20px;
}

.family-name {
  font-size: 24px;
  font-weight: bold;
}

.member-count {
  text-align: center;
  margin-bottom: 20px;
}

.member-list {
  height: 300px; /* 根据实际需要调整高度 */
}

.member-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ccc;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.info {
  flex: 1;
}

.add-member-btn {
  margin-top: 20px;
  width: 100%;
  background-color: #1aad19;
  color: white;
  border-radius: 5px;
}

.other-info {
  margin-top: 20px;
}

.info-item {
  margin-bottom: 10px;
}