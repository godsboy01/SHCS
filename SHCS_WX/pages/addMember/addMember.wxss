/* pages/addMember/addMember.wxss */
.page {
  padding-top: 100px;
  background-color: #f5f5f5;
}

/* 容器样式 */
.container {
  padding: 20px;
}

/* 用户列表容器样式 */
.user-list {
  height: 300px; /* 根据实际需要调整高度 */
}

/* 用户项样式 */
.user-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #ccc;
}

/* 选中的用户项样式 */
.user-item.selected {
  background-color: #f5f5f5;
}

/* 头像样式 */
.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

/* 用户信息容器样式 */
.info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 60px; /* 与头像高度一致 */
}

/* 用户名称样式 */
.name {
  font-weight: bold;
  margin-bottom: 6px;
}

/* 用户详情（ID 和角色）样式 */
.detail {
  font-size: 14px;
  color: #666;
}

/* 激活按钮样式 */
.active-btn {
  background-color: #07c160 !important;
  color: white !important;
}

/* 禁用按钮样式 */
.disabled-btn {
  background-color: #f0f0f0 !important;
  color: #999 !important;
}

.search-box {
  position: relative;
  padding: 15rpx;
  background: #fff;
}

.clear-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 当前家庭标签样式 */
.family-tag {
  margin-left: 15rpx;
  padding: 4rpx 8rpx;
  background: #07c160;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: white;
}

/* 其他家庭标签样式 */
.family-tag.other-family {
  background: #ff4d4f;
  color: white;
}