.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 44px;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 15px;
  border-bottom: 1rpx solid #eee;
  z-index: 100;
}

.back-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.icon-back {
  margin-right: 4px;
  font-size: 32rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-right: 30px;
}

/* 图表容器样式 */
.chart-container {
  margin-top: 54px;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* BMI状态样式 */
.bmi-status {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bmi-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.bmi-value {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.bmi-desc {
  font-size: 28rpx;
  color: #666;
}

/* BMI状态颜色 */
.bmi-normal {
  border-left: 8rpx solid #4CAF50;
}

.bmi-warning {
  border-left: 8rpx solid #FFC107;
}

.bmi-danger {
  border-left: 8rpx solid #F44336;
}

/* 最新记录样式 */
.latest-record {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
}

.record-item:last-child {
  border-bottom: none;
}

.record-item text:first-child {
  color: #666;
}

.record-item text:last-child {
  color: #333;
  font-weight: 500;
}

/* 手动录入表单样式 */
.input-form {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item text {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.form-item input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

/* 操作按钮样式 */
.action-buttons {
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.submit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #4CAF50;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.submit-btn:active {
  opacity: 0.8;
}

.add-test-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  background: #f5f5f5;
  color: #666;
}

.add-test-btn:active {
  opacity: 0.8;
}