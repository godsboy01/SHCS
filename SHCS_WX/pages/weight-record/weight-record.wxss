/* pages/weight-record/weight-record.wxss */
.page {
  padding-top: 100px;
  background-color: #f5f5f5;
}
.form-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.input {
  height: 60rpx;
  padding: 0 20rpx;
  border: 1px solid #eee;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
}
/* 在对应的 wxss 文件中 */
.bmi-status {
  padding: 20rpx;
  text-align: center;
}

.bmi-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.status-text {
  margin-top: 10rpx;
  font-size: 32rpx;
}

/* 根据 BMI 状态设置不同颜色 */
.bmi-lean { color: #FFA500; }
.bmi-normal { color: #22BB33; }
.bmi-over { color: #FF4444; }
.bmi-obese { color: #CC0000; }

.chart-container {
  width: 100%;
  height: 300px;
  margin: 20px 0;
}

.time-range {
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
}

.picker {
  flex: 1; /* 占据剩余空间 */
  height: 60rpx;
  border: 1px solid #eee;
  padding: 0 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center; /* 文本居中 */
  color: #666;
  background-color: #f9f9f9; /* 添加背景色 */
}


/* 健康状态颜色 */
.healthy {
  color: #4CAF50;
}

.overweight {
  color: #FFA726;
}

.obese {
  color: #F44336;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  padding: 20px;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 1000;
}
.chart-container {
  width: 100%;
  height: 300px;
  margin: 20px 0;
}