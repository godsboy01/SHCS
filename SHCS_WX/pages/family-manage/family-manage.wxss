.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 140rpx 30rpx 40rpx;
  box-sizing: border-box;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 地址区域 */
.address-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4CAF50;
}

.address-form {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.address-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.save-address-btn {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4CAF50;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  font-weight: normal;
}

.save-address-btn[loading] {
  opacity: 0.8;
}

/* 成员区域 */
.member-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.add-member-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(76, 175, 80, 0.1);
  color: #4CAF50;
  font-size: 24rpx;
  border-radius: 100rpx;
  border: none;
  font-weight: normal;
}

.add-member-btn::after {
  border: none;
}

.add-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 成员列表 */
.member-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.member-item:active {
  transform: scale(0.98);
}

.member-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
}

.member-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.member-role-container {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.role-icon {
  width: 28rpx;
  height: 28rpx;
}

.member-role {
  font-size: 24rpx;
  color: #666;
}

.member-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.member-phone {
  font-size: 24rpx;
  color: #666;
}

.delete-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 24rpx;
  background: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
  font-size: 24rpx;
  border-radius: 100rpx;
  border: none;
  font-weight: normal;
  transition: all 0.3s ease;
}

.delete-btn::after {
  border: none;
}

.delete-btn-hover {
  background: rgba(255, 59, 48, 0.2);
}

.delete-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #999;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  animation: modalIn 0.3s ease;
}

@keyframes modalIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f8f8;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.role-group {
  display: flex;
  gap: 40rpx;
}

.role-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.role-select-icon {
  width: 32rpx;
  height: 32rpx;
  margin: 0 8rpx;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 32rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn {
  width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #4CAF50;
  color: #fff;
}

.confirm-btn[loading] {
  opacity: 0.8;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  display: block;
} 