/* pages/sitting-detail/sitting-detail.wxss */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  z-index: 99;
}

.nav-bar-left {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.nav-bar-title {
  flex: 1;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

.container {
  padding: 108rpx 30rpx 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: #f5f5f5;
}

.detail-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.card-header {
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.info-list {
  
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.duration {
  color: #ff6b6b;
}

.processed {
  color: #52c41a;
}

.unprocessed {
  color: #ff4d4f;
}

.image-container {
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #f8f8f8;
  border-radius: 8rpx;
  overflow: hidden;
}

.reminder-container {
  padding: 40rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.reminder-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
}

.reminder-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.reminder-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.scene-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  background-color: #f8f8f8;
} 