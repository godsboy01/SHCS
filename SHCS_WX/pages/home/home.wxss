/* pages/home/home.wxss */
.page {
  padding-top: 100rpx;
  background-color: #ffffff;
}

.container {
  padding: 140rpx 30rpx 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.navbar {
  height: 180rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e7f2f5af;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.family-name {
  font-size: 48rpx;
  font-weight: bold;
}
/* 温度模块样式 */
.temperature {
  width: 50%; /* 占满整个容器的宽度 */
  padding: 20rpx; /* 增加内边距 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #e0f7fa;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.temperature-text {
  font-size: 64rpx; /* 增大字体大小 */
  font-weight: bold;
  margin-bottom: 10rpx;
}
.weather-icon {
  margin-bottom: 10rpx;
}
.icon {
  width: 64rpx; /* 设置图标大小 */
  height: 64rpx;
}

.location {
  font-size: 24rpx;
  color: #666;
}

/* 设备模块 */
.devices-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.device-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  min-height: 240rpx;
}

.device-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.device-icon image {
  width: 60rpx;
  height: 60rpx;
}

.device-info {
  text-align: center;
  width: 100%;
}

.device-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.device-status {
  font-size: 24rpx;
  color: #ff3b30;
  display: block;
}

.device-status.online {
  color: #4CAF50;
}

.add-card {
  border: 2rpx dashed #4CAF50;
  background: #f8f8f8;
  box-shadow: none;
}

.add-card .device-icon image {
  width: 48rpx;
  height: 48rpx;
  opacity: 0.6;
}

.add-card .device-name {
  color: #4CAF50;
}

/* 添加天气小组件样式 */
.weather-widget {
  background: linear-gradient(135deg, #4CAF50, #45a049);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
}

.weather-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.temp-wrap {
  display: flex;
  flex-direction: column;
}

.temperature {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.weather-text {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.location-wrap {
  text-align: right;
}

.location {
  font-size: 28rpx;
  display: block;
}

.date {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 10rpx;
  display: block;
}

/* 加载状态样式 */
.loading-container {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4CAF50;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999999;
}

/* 空状态样式 */
.empty-container {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}