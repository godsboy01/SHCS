.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 80vh;
  background-color: #ededed; 
  padding: 10px;
}

.page-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.info-container {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 20px;
}

.info-container text {
  font-size: 16px;
  color: #333;
}

.time-container {
  margin-bottom: 20px;
}

.time-container text {
  font-size: 18px;
  font-weight: bold;
  color: #555;
}


.video-container {
  width: 100%; /* 容器宽度 */
  height: 300px; /* 设置固定高度 */
  position: relative;
  border: 1px solid #ddd;
  border-radius: 10px;
  overflow: hidden;
}
.video-container image {
  width: 100%;
  height: 100%;
}
