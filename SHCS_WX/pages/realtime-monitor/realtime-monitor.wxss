/* 控制按钮 */
.control-button {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7); /* 半透明背景 */
  color: white;
  padding: 10px 20px;
  border-radius: 20px;
  font-size: 16px;
  text-align: center;
  cursor: pointer;
}

.control-button:active {
  background-color: rgba(0, 0, 0, 0.9); /* 点击效果 */
}

.video-container {
  position: relative;
  width: 100%;
  aspect-ratio: 16 / 9;
  border-radius: 8px;
  overflow: hidden;
  background-color: #000;
}


