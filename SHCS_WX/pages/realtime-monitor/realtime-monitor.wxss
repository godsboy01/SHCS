/* 全局样式 */


.page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 导航栏样式 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 180rpx;
  background: linear-gradient(to right, #34c759, #32d74b);
  color: #fff;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.nav-bar-content {
  height: 100%;
  display: flex;
  align-items: center;
}

/* 返回按钮样式 */
.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.device-location {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 主容器样式 */
.container {
  padding: 200rpx 30rpx 30rpx;
}

/* 时间显示样式 */
.time-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.time-text {
  font-size: 48rpx;
  font-weight: 500;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 视频容器样式 */
.video-container {
  width: 100%;
  height: 750rpx;
  background-color: #000;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.video-stream {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.loading, .error, .placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.placeholder {
  color: rgba(255, 255, 255, 0.7);
}

/* 控制按钮样式 */
.controls {
  display: flex;
  justify-content: center;
  margin-top: 40rpx;
}

.control-btn {
  min-width: 240rpx;
  padding: 20rpx 40rpx;
  background: linear-gradient(to right, #34c759, #32d74b);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(52, 199, 89, 0.3);
  transition: all 0.3s ease;
}

.control-btn.playing {
  background: linear-gradient(to right, #ff3b30, #ff4f45);
  box-shadow: 0 4rpx 12rpx rgba(255, 59, 48, 0.3);
}

.control-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.alert-container {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #FF3B30;
  border-radius: 8rpx;
}

.alert-message {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

.snapshots-container {
  margin-top: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.snapshot-section {
  margin-bottom: 30rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.snapshot-scroll {
  white-space: nowrap;
  width: 100%;
}

.snapshot-image {
  display: inline-block;
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}

