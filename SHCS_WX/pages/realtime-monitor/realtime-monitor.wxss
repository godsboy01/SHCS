/* 全局样式 */


.page {
  padding-top: 100rpx; /* 为导航栏留出空间 */
  background-color: #ddd;
}
/* 顶部导航栏 */
.navbar {
  height: 180rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e7f2f5af;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

