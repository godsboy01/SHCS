<navigation-bar 
  title="注册" 
  back="{{true}}" 
  background="#4CAF50" 
  color="#ffffff"
/>
<view class="auth-container">
  <view class="auth-header">
    <view class="auth-title">注册</view>
  </view>

  <form class="auth-form" bindsubmit="handleRegister">
    <view class="form-item">
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icon/people.png"/>
        <input class="input-box" name="username" placeholder="请输入用户名" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icon/secret.png"/>
        <input class="input-box" name="password" type="password" placeholder="请输入密码" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icon/name.png"/>
        <input class="input-box" name="name" placeholder="请输入姓名" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icon/phone.png"/>
        <input class="input-box" name="phone" type="number" placeholder="请输入手机号" />
      </view>
    </view>

    <view class="form-item">
      <view class="input-wrapper">
        <image class="input-icon" src="/assets/icon/role.png"/>
        <picker name="role" bindchange="handleRoleChange" value="{{roleIndex}}" range="{{roles}}">
          <view class="picker-box">{{roles[roleIndex]}}</view>
        </picker>
      </view>
    </view>

    <button class="submit-button" form-type="submit">注册</button>
  </form>

  <view class="auth-footer">
    <navigator url="/pages/login/login" class="auth-link">已有账号？去登录</navigator>
  </view>
</view>