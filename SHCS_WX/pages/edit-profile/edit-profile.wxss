.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 140rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 0 -32rpx;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.tips-section {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.button-section {
  padding: 40rpx 0;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #4CAF50;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  font-weight: normal;
}

.submit-button::after {
  border: none;
}

.submit-button:active {
  opacity: 0.8;
}

.page {
  display: flex;
  flex-direction: column;
  padding: 20px;
  padding-top: 100px;
  background-color: #f5f5f5;
}

.edit-profile {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.change-avatar-button {
  background-color: #07c160;
  color: #fff;
  font-size: 14px;
  padding: 5px 10px;
  border-radius: 5px;
}

.picker {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
  color: #333;
  font-size: 16px;
}

.picker text {
  display: inline-block;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}