<page-meta>
  <navigation-bar 
    title="编辑个人信息" 
    background="#4CAF50" 
    color="#ffffff"
    back="{{true}}"
  />
</page-meta>

<view class="container">
  <view class="form-section">
    <view class="form-item">
      <text class="label">姓名</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入姓名" 
        value="{{userInfo.name}}"
        data-field="name"
        bindinput="handleInput"
        maxlength="20"
      />
    </view>
    <view class="divider"></view>
    
    <view class="form-item">
      <text class="label">手机号</text>
      <input 
        class="input" 
        type="number" 
        placeholder="请输入手机号" 
        value="{{userInfo.phone}}"
        data-field="phone"
        bindinput="handleInput"
        maxlength="11"
      />
    </view>
    <view class="divider"></view>
    
    <view class="form-item">
      <text class="label">邮箱</text>
      <input 
        class="input" 
        type="text" 
        placeholder="请输入邮箱" 
        value="{{userInfo.email}}"
        data-field="email"
        bindinput="handleInput"
      />
    </view>
  </view>

  <view class="tips-section">
    <text class="tips-text">* 请确保手机号码和邮箱的准确性，以便接收重要通知</text>
  </view>

  <view class="button-section">
    <button class="submit-button" bindtap="handleSubmit">保存</button>
  </view>
</view>