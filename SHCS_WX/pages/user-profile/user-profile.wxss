.container {
  padding: 120rpx 30rpx 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.upload-btn {
  font-size: 28rpx;
  color: #4CAF50;
}

.info-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.edit-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.device-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.device-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.device-item {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.device-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 16rpx;
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 26rpx;
  color: #333;
  display: block;
}

.device-status {
  font-size: 24rpx;
  color: #ff3b30;
}

.device-status.online {
  color: #4CAF50;
} 