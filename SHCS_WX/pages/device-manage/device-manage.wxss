/* pages/device-manage/device-manage.wxss */
.container {
  padding: 140rpx 30rpx 30rpx;  /* 顶部留出导航栏的空间 */
  background: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.device-list {
  margin-bottom: 120rpx;
}

.device-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: flex-start;
  position: relative;
}

.device-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 24rpx;
  background: #e8f5e9;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.device-icon image {
  width: 60rpx;
  height: 60rpx;
}

.device-info {
  flex: 1;
  margin-right: 20rpx;
}

.device-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.device-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.device-status {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #ff3b30;
}

.device-status.online {
  color: #4CAF50;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff3b30;
  margin-right: 8rpx;
}

.status-dot.online {
  background: #4CAF50;
}

.device-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  background: #f8f8f8;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.meta-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.device-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  padding: 12rpx 32rpx;
  border-radius: 8rpx;
  line-height: 1.5;
  min-width: 120rpx;
}

.action-btn.edit {
  background: #4CAF50;
  color: #fff;
}

.action-btn.delete {
  background: #ff3b30;
  color: #fff;
}

.add-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #4CAF50;
  color: #fff;
  padding: 24rpx 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(76, 175, 80, 0.3);
  font-size: 32rpx;
}

.add-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 12rpx;
}