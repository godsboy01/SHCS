/* pages/device-manage/device-manage.wxss */
.container {
    padding: 140rpx 30rpx 30rpx;  /* 顶部留出导航栏的空间 */
    background: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  .device-list {
    margin-bottom: 120rpx;
  }
  
  .device-item {
    background: #ffffff;
    border-radius: 12rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    position: relative;
  }
  
  .device-icon {
    width: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
    background: #e8f5e9;
    border-radius: 12rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .device-icon image {
    width: 60rpx;
    height: 60rpx;
  }
  
  .device-info {
    margin-bottom: 20rpx;
  }
  
  .device-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
  }
  
  .device-name {
    font-size: 32rpx;
    color: #333;
  }
  
  .device-status {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #ff3b30;
  }
  
  .device-status.online {
    color: #4CAF50;
  }
  
  .status-dot {
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: #ff3b30;
    margin-right: 8rpx;
  }
  
  .status-dot.online {
    background: #4CAF50;
  }
  
  .device-location, .device-ip {
    font-size: 26rpx;
    color: #666;
    margin-top: 8rpx;
  }
  
  .device-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #666;
    background: #f8f8f8;
    padding: 8rpx 16rpx;
    border-radius: 8rpx;
  }
  
  .meta-icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 8rpx;
  }
  
  .device-actions {
    display: flex;
    gap: 20rpx;
  }
  
  .action-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 8rpx;
    font-size: 28rpx;
    padding: 0;
  }
  
  .action-btn.edit {
    background: #4CAF50;
    color: #ffffff;
  }
  
  .action-btn.delete {
    background: #ff3b30;
    color: #ffffff;
  }
  
  .add-button {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 240rpx;
    height: 80rpx;
    line-height: 80rpx;
    background: #4CAF50;
    color: #ffffff;
    border-radius: 40rpx;
    text-align: center;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .add-icon {
    font-size: 40rpx;
    margin-right: 8rpx;
  }