.auth-container {
  padding: 40rpx;
  background: #fff;
  min-height: 100vh;
}

.auth-header {
  margin: 60rpx 0;
  text-align: center;
}

.auth-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-subtitle {
  font-size: 28rpx;
  color: #666;
}

.auth-form {
  margin-top: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input-box {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.submit-button {
  margin-top: 60rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 32rpx;
}

.auth-footer {
  margin-top: 40rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.auth-link {
  color: #007AFF;
  display: inline-block;
  margin-left: 10rpx;
} 