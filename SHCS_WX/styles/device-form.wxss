.container {
  padding: 140rpx 20rpx 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

.device-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.device-icon {
  width: 120rpx;
  height: 120rpx;
  background: #e8f5e9;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.device-icon image {
  width: 72rpx;
  height: 72rpx;
}

.device-status {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #ff3b30;
}

.device-status.online {
  color: #4CAF50;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #ff3b30;
  margin-right: 8rpx;
}

.status-dot.online {
  background: #4CAF50;
}

.input, .info-box {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

.info-box {
  background: #f5f5f5;
  color: #666;
}

.form-group {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

.form-item {
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 88rpx;
}

.picker.placeholder {
  color: #999;
}

.type-text, .info-text {
  font-size: 30rpx;
  color: #333;
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.button-group {
  padding: 0;
  margin: 0 20rpx 40rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.submit-btn, .delete-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 0 20rpx 0;
  padding: 0;
  border: none;
  line-height: 88rpx;
}

.submit-btn {
  background: #4CAF50;
  color: #ffffff;
}

.delete-btn {
  background: #ff3b30;
  color: #ffffff;
}

.button-group button:last-child {
  margin-bottom: 0;
} 