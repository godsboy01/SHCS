    },
    {
      "pagePath": "pages/notifications/notifications",
      "text": "通知中心",
      "iconPath": "./assets/tabbar/notation.png",
      "selectedIconPath": "./assets/tabbar/notation_active.png"
    },
    {
      "pagePath": "pages/profile/profile",
      "text": "个人主页",
      "iconPath": "./assets/tabbar/people.png",
      "selectedIconPath": "./assets/tabbar/people_active.png"
    }]
  },

  "rendererOptions": {
    "skyline": {
      "defaultDisplayBlock": true,
      "defaultContentBox": true,
      "tagNameStyleIsolation": "legacy",
      "disableABTest": true,
      "sdkVersionBegin": "3.0.0",
      "sdkVersionEnd": "15.255.255"
    }
  },
  "componentFramework": "glass-easel",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents",
  "permission": {
    "scope.userLocation": {
      "desc": "你的位置信息将用于小程序位置接口的效果展示"
    }
